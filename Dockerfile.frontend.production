# Stage 1: build the frontend
FROM node:20-alpine AS builder
WORKDIR /app

# Install pnpm (if you must use pnpm)
RUN npm install -g pnpm

# Copy package files and install
COPY package.json pnpm-lock.yaml ./
RUN pnpm install

# Copy source and build
COPY . .

# Set build-time environment variables for Vite
ARG VITE_API_URL=https://data.kobotai.co/api
ARG VITE_STARKNET_RPC_URL=https://starknet-sepolia.public.blastapi.io
ARG VITE_LISK_WS_URL=wss://ws.api.lisk.com/

ENV VITE_API_URL=$VITE_API_URL
ENV VITE_STARKNET_RPC_URL=$VITE_STARKNET_RPC_URL
ENV VITE_LISK_WS_URL=$VITE_LISK_WS_URL

RUN pnpm run build

# Stage 2: production image, serve with NGINX
FROM nginx:alpine
# Remove default (optional)
# RUN rm /etc/nginx/conf.d/default.conf

# Copy built files into nginx html folder
COPY --from=builder /app/dist /usr/share/nginx/html

# Copy your custom NGINX site config if you prefer (see next section)
# COPY nginx-frontend.conf /etc/nginx/sites-available/data.kobotai.co.conf

# Enable the site (create symlink)
# RUN ln -s /etc/nginx/sites-available/data.kobotai.co.conf /etc/nginx/sites-enabled/data.kobotai.co.conf

# Expose the port nginx will listen on (5173 or 443 if you embed SSL here)
EXPOSE 5173

CMD ["nginx", "-g", "daemon off;"]
