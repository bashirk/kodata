# KoData DAO Backend Environment Configuration
# Copy this file to .env and fill in your values

# Database Configuration
DATABASE_URL="postgresql://kodata:kodata_password@localhost:5432/kodata"
DIRECT_URL="postgresql://kodata:kodata_password@localhost:5432/kodata"

# Redis Configuration (for BullMQ)
REDIS_URL="redis://localhost:6379"

# Server Configuration
PORT=3001
NODE_ENV=development
FRONTEND_URL="http://localhost:5173"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Starknet Configuration
# Get RPC URL from: https://starknet.io/developers/rpc
STARKNET_RPC_URL="https://starknet-testnet.public.blastapi.io"

# Starknet Account (for backend operations)
# Generate using: starkli account new --out ~/.starkli_accounts/backend.json
STARKNET_ACCOUNT_ADDRESS="0x..."
STARKNET_PRIVATE_KEY="0x..."

# Starknet Contract Address (your deployed WorkProof contract)
STARKNET_CONTRACT_ADDRESS="0x..."

# Lisk Configuration
# Get from Lisk Desktop wallet or generate using Lisk SDK
LISK_BACKEND_PUBKEY="..."
LISK_BACKEND_PRIVKEY="..."

# Optional: IPFS Configuration
IPFS_URL="https://ipfs.infura.io:5001"
IPFS_PROJECT_ID="..."
IPFS_PROJECT_SECRET="..."

# Optional: MinIO Configuration (for file storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT=9000
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET="kodata"
